<h1> Account: <%= @user.username.upcase %> </h1>
<%= link_to "Update Account Details", edit_user_path(@user) %>

<p> Member Since: <%= @user.created_on %> </p>

<% if !@user.bio %>
  <p> Add a bio! <p>
    <%= form_for @user do |f| %>
      <%= f.text_area :bio %>
      <%= f.submit "Save" %>
    <% end %>
<% else %>
  <%= @user.bio %>
<% end %>
