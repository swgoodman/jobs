
<!-- SHOW - USER -->

<h1> Account: <%= @user.username.upcase %> </h1>
  <%= link_to "Update Account Details", edit_user_path(@user) %>

  <p> Member Since: <%= @user.created_on.strftime("%B, %Y") %> </p>

  <% if !@user.bio %>

<!-- ADD BIO -->

    <p> Add a bio! <p>

  <div class="form">
    <%= form_for @user do |f| %>
      <%= f.text_area :bio %>
      <%= f.submit "Save" %>
    <% end %>
  </div>
  
<!-- SHOW BIO -->

    <% else %>
      <%= @user.bio %>
  <% end %>
