<h1>Dashboard</h1>

<%= link_to "New Lead", new_user_lead_url(@user) %>

<% if !params[:status].blank? %>
  <% @leads = Lead.where(status: params[:status]) %>
<% end %>

<h3>Filter Leads:</h3>
<%= form_tag(user_leads_url(@user), method: "get") do %>
  <%= select_tag :status, options_for_select(['Warm', 'Cold']), :include_blank => 'All' %>
  <%= submit_tag "Filter" %>
<% end %>

<p>Leads:</p>
<% @leads.each do |lead| %>
  <div>COMPANY: <%= Company.find_by(id: lead.company_id).name %></div>
  <div>WEBSITE: <%= Company.find_by(id: lead.company_id).website %></div>
  <div>CITY: <%= Company.find_by(id: lead.company_id).city %></div>
  <div>POSITION: <%= lead.position %></div>
  <br>
  <div>CONTACT PERSON: <%= lead.point_person %></div>
  <div>PHONE NUMBER: <%= lead.phone_number %></div>
  <div>EMAIL: <%= lead.email %></div>
  <div>STATUS:
    <% if lead.status == "1" %>
      <%= "Warm" %>
    <% else %>
      <%= "Cold" %>
    <% end %></div>
  <div><%= link_to "Edit Lead", edit_user_lead_url(@user, lead) %></div>

  <br>
  <br>
<% end %>
